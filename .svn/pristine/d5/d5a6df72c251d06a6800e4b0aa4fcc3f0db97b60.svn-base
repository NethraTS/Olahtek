.legend {
	text-align: center;
	font-size: 10px;
	font-weight: bold;
	cursor: pointer;
}

circle, .line {
	fill: none;
	stroke: #328de4; /* blue for userIncome*/
	stroke-width: 4px;
}

circle {
	fill: white;
	fill-opacity: 1;
	stroke-width: 1px;
	cursor: move;
}

